{
    // fichier de configuration pour le d√©bogage PHP
    // https://code.visualstudio.com/docs/editor/debugging
    // https://xdebug.org/docs/step_debug
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üåê Listen for XDebug (Serveur Web)",
            "type": "php",
            "request": "launch",
            "port": 9000,
            "pathMappings": {
                "/workspaces/LAMP-start": "${workspaceFolder}"
            },
            "log": false,
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_children": 100,
                "max_data": 1024,
                "max_depth": 3
            }
        },
        {
            "name": "üöÄ Launch application (index.php)",
            "type": "php",
            "request": "launch",
            "program": "${workspaceFolder}/site/index.php",
            "cwd": "${workspaceFolder}/site",
            "port": 9000,
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_SESSION": "1"
            }
        },
        {
            "name": "üìÑ Launch currently open script",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "port": 9000,
            "env": {
                "XDEBUG_MODE": "debug",
                "XDEBUG_SESSION": "1"
            }
        },
        {
            "name": "üö´ Launch without XDebug",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "env": {
                "XDEBUG_MODE": "off"
            }
        }
    ]
}